    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "express": "^4.18.2",
    "fs-extra": "^11.1.0",
    "gray-matter": "^4.0.3",
    "history": "^5.3.0",
    "image-size": "^1.0.2",
    "jest": "^29.4.2",
    "jest-environment-jsdom": "^29.4.2",
    "js-yaml": "^4.1.0",
